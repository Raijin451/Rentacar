@model Rental

@{
    ViewData["Title"] = "Araba Kirala";
}

<h2>@ViewData["Title"]]</h2>

<form asp-action="Rent">
    <input type="hidden" asp-for="CarId" />

    <div class="form-group">
        <label asp-for="RentalDate">Kiralama Tarihi</label>
        <input asp-for="RentalDate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ReturnDate">İade Tarihi</label>
        <input asp-for="ReturnDate" class="form-control" />
    </div>

    <!-- Diğer gerekli alanlar -->

    <button type="submit" class="btn btn-primary">Kirala</button>
</form>
